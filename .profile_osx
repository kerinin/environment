function kubit {
  if [[ -a ~/.kubit.pid ]]; then
    kill "$(cat ~/.kubit.pid)"
    rm -f ~/.kubit.pid
  fi

  trap "rm ~/.kubit.pid; exit" EXIT SIGQUIT SIGINT SIGSTOP SIGTERM ERR
  echo $$ > ~/.kubit.pid
  ssh -N bastion-vpc.us-east-1.context.io -L 8080:kube-master.us-east-1.context.io:8080
}

function kube {
  ssh -f -o ExitOnForwardFailure=yes -L8080:kube-master.us-east-1.context.io:8080 bastion-vpc.us-east-1.context.io sleep .2
  kubectl $@
}
